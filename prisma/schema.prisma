// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// Definisikan Enum untuk peran pengguna
enum UserRole {
  admin
  direktur
  keuangan
  redaksi
  hrd
  marketing
  team
}

// Model untuk tabel profiles
model Profile {
  id        String   @id @default(uuid())
  full_name String?
  // Gunakan enum yang sudah dibuat
  role      UserRole @default(team)

  // Relasi ke tabel auth.users
  user      User     @relation(fields: [id], references: [id], onDelete: Cascade)
}

// Model untuk mereferensikan tabel auth.users yang sudah ada
model User {
  id         String    @id @default(uuid())
  email      String?   @unique
  // Relasi kembali ke Profile
  profile    Profile?

  // Mapping ke tabel asli di skema auth Supabase
  @@map("users")
}