// prisma/schema.prisma - Updated to fix foreign key issue

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// Definisikan Enum untuk peran pengguna
enum UserRole {
  admin
  direktur
  keuangan
  redaksi
  hrd
  marketing
  team
}

// Model untuk tabel profiles
model Profile {
  id        String   @id @default(uuid())
  full_name String?
  // Gunakan enum yang sudah dibuat
  role      UserRole @default(team)

  // Remove relation untuk avoid foreign key issues
  // user      User     @relation(fields: [id], references: [id], onDelete: Cascade)
}

